<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h1 class="page-header">Dashboard</h1>
  <h2 class="sub-header">Running servers
  <form class="navbar-form navbar-right" method="get" action="/dashboard">
    <input type="text" name="search" class="form-control" placeholder="Search clusters...">
  </form>
  </h2>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>URL</th>
        </tr>
      </thead>
      <tbody>
        <% @servers.each do |name, dns_name| %>
          <tr>
            <td><%= name %></td>
            <td><%= dns_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
